<div class="card-container">
    <div class="row">
        @foreach (var category in context.Category)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <p>@category.Name</p>

                        <div class="card-actions">
                            <a href="@($"categories/edit?id={category.Id}")">Editar</a> |
                            <a href="@($"categories/details?id={category.Id}")">Detalhes</a> |
                            <a href="@($"categories/delete?id={category.Id}")">Excluir</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private BlazorServerScaffoldingContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
