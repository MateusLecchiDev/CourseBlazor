@page "/categories"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using BlazorServerScaffolding.Entities
@using BlazorServerScaffolding.Data
@implements IAsyncDisposable
@inject IDbContextFactory<BlazorServerScaffolding.Data.BlazorServerScaffoldingContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Categorias</h1>

<p>
    <a href="categories/create">Criar Novo</a>
</p>

