@page "/tasks"
@page "/tasks/{status}"
@page "/list"

@rendermode InteractiveServer

<button class="btn btn-link mb-3" @onclick="GoToSummary">
    <i class="bi bi-bar-chart-line"></i>
    See Summary
</button>

<div class="alert alert-primary mt-4 p-3" style="border-left: 5px solid #0d6efd;">

    <h5 class="alert-heading fw-bold">Diagnostic of Rendering</h5>
    <hr />

    <dl class="row">
        <dt class="col-sm-4">Place of Execution:</dt>
        <dd class="col-md-8"><code>@RendererInfo.Name</code></dd>

        <dt class="col-sm-4">Is Interactive (now):</dt>
        <dd class="col-md-8"><code>@RendererInfo.IsInteractive</code></dd>

        <dt class="col-sm-4">Assigned Mode:</dt>
        <dd class="col-md-8"><code>@(AssignedRenderMode?.ToString() ?? "None (Static/SSR)")</code></dd>
    </dl>

</div>

@if (RendererInfo?.Name == "Static")
{
    <p>This component was rendering statically and isn't interactive.'</p>
}
else if (RendererInfo?.IsInteractive == true)
{
    <p>This component was rendering in the @RendererInfo.Name , now is interactive.</p>
}

<h1>List of Tasks</h1>
<h5>
    Usando <b>rendermode InteractiveServer</b>
</h5>
<br />

@if (tasks == null)
{
    <img src="https://media.giphy.com/media/qHOf8vC1ppFQs/giphy.gif" width="100" class="icon-loading" />
    <p>Loading tasks...</p>
}
else if (!tasks.Any())
{
    <img src="icons/error-404.png" class="icon-loading" />
    <p>Yet don't exist tasks</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Action</th>
                <th>Date</th>
                <th>Description</th>
                <th>Completed</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in tasks)
            {
                <tr>
                    <td>
                        <button class="btn btn-danger btn-sm" @onclick="() => RemoveTask(item.ID)"><i class="bi bi-trash"></i>Remove</button>
                    </td>
                    <td>@item.DateCriation.ToShortDateString()</td>
                    <td>@item.Description</td>
                    <td>
                        <input type="checkbox" checked="@item.Completed" @onchange="() => ToggleConclusion(item.ID)" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<TaskCourse>? tasks;

    [Parameter]
    public string? Status { get; set; }

    [Inject]
    private NavigationManager Nav { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(2000);
        tasks = TaskData.GetTasks();

        tasks = Status?.ToLower() switch
        {
            "completed" => tasks.Where(t => t.Completed).ToList(),
            "pendings" => tasks.Where(t => !t.Completed).ToList(),
            _ => tasks
        };
    }

    private void RemoveTask(Guid id)
    {
        tasks?.RemoveAll(t => t.ID == id);
    }

    private void ToggleConclusion(Guid id)
    {
        var task = tasks?.FirstOrDefault(t => t.ID == id);

        if (task != null)
        {
            task.Completed = !task.Completed;
        }
    }

    private void GoToSummary()
    {
        Nav.NavigateTo("/tasks-summary");
    }
}
