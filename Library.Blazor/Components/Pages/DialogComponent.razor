@if (Show)
{
    <div class="confirm-dialog-container">
        <div class="confirm-dialog">
            @ChildContent
            <div class="d-flex flex-row justify-content-end mt-5">
                <button @onclick="OnCancel" class="btn btn-primary">
                    Cancelar
                </button>
                <button @onclick="OnDelete" class="btn btn-danger">
                    Deletar
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool Show { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    // OnDelete será usado para notificar o componente pai quando o botão "Deletar" for clicado.
    // O componente pai vai definir um método manipulador de eventos que será chamado quando o evento for disparado.

    [Parameter]
    public EventCallback OnDelete { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
