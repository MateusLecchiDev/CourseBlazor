@page "/books"
@inherits AppComponentBase

<h3>Catálogo</h3>

<button class="btn btn-primary" @onclick="OnNewBook">Criar Novo Livro</button>

<hr />

@if (books is null)
{
    <img src="/images/loading.gif" width="100" height="100" />
}
else
{
    <div class="row">
        @foreach (var book in books)
        {
            <BooksCard @rendermode="InteractiveServer" Book="@book" />
        }
    </div>
}

@code {
    IEnumerable<Book>? books;

    private void OnNewBook()
    {
        navigationManager.NavigateTo("/new-book");
    }

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(200);
        books = await bookRepository.GetBooks();
    }
}
